class Solution(object):
    def toHex(self, num):
        """
        :type num: int
        :rtype: str
        """
        if num == 0:
            return "0"

        # Handle negative numbers using two's complement
        num &= 0xFFFFFFFF

        hex_chars = "0123456789abcdef"
        result = ""

        while num > 0:
            result = hex_chars[num & 0xF] + result
            num >>= 4

        return result
